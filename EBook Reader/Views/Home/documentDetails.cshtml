@model EBook_Reader.Models.Document
@{
    ViewData["Title"] = "documentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DocumentDetails</h1>

<div>
    <h4>Document</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
</div>
<div>
    <h4 style="margin-bottom: 10px;">Comments</h4>
    @foreach (var lct in Model.Comments)
    {
        <div style="padding:0px 25px; margin:0px;">
            @Html.Label(lct.Comment) -
            @Html.Label(lct.CommentDate.ToShortDateString())
        </div>
    }
</div>
<div style="height: 10px;"></div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


